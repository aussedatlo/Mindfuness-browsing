{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "scripts",
    "outDir": "build/scripts",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["scripts"]
}
